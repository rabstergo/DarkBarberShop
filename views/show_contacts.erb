<h1>Contacts list</h1>

<table class="table">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Name</th>
    <th scope="col">Mail</th>
    <th scope="col">Body</th>
  </tr>
  </thead>
  <tbody>
  <% Contact.all.each do |row| %>

    <tr>
      <th scope="row"><%= row.id %></th>
      <td><%= row.name %></td>
      <td><%= row.mail %></td>
      <td><%= row.body %></td>
    </tr>

  <% end %>

  </tbody>
</table>

<h1>Users list</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Username</th>
      <th scope="col">Phone</th>
      <th scope="col">Hairdresser</th>
      <th scope="col">Date Time</th>
      <th scope="col">Hair Color</th>
    </tr>
  </thead>
  <tbody>
  <% @users_data.each do |row| %>

    <tr>
      <th scope="row"><%= row[0] %></th>
      <td><%= row[1] %></td>
      <td><%= row[2] %></td>
      <td><%= row[3] %></td>
      <td><%= row[4] %></td>
      <td style="background-color: <%= row[5] %>"><%= row[5] %></td>
    </tr>

  <% end %>

  </tbody>
</table>
